<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>


{{#each postagens}}
<div class="card mt-4">
    <div class="card-body d-flex flex-column justify-content-between">
        <h4>{{titulo}}</h4>
        <p>{{descricao}}</p>
        <small>data: {{data}}</small>
        <small> categoria : {{categoria.nome}}</small>
        <a href="/admin/postagens/edit/{{_id}}">
            <button class="btn btn-outline-success btn-block w-100 mt-2">Editar Postagem</button></a>
        <form action="/admin/postagens/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-outline-danger w-100 mt-2">Deletar Postagem</button>
        </form>
    </div>
</div>
{{else}}
<p class="mt-4">Nenhuma Categoria Registrada</p>
{{/each}}