{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova Postagem:</h3>

<div class="card">
    <form action="/admin/postagens/nova" method="post" class="card-body">

        <label for="titulo">Titulo:</label>
        <input type="text" name="titulo" class="form-control" id="titulo" required>

        <label for="slug">Slug: </label>
        <input type="text" name="slug" id="slug" class="form-control" required>

        <label for="descricao">Descricao:</label>
        <input type="text" name="descricao" id="descricao" class="form-control" required>

        <label for="conteudo">Conteudo:</label>
        <textarea name="conteudo" id="conteudo" class="form-control" required></textarea>

        <label for="categoria">Categoria:</label>
        <select name="categoria" id="categoria" class="form-control" required>
            <option value="">Selecione uma categoria</option>
            {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
            {{else}}
            <option value="">Nenhuma categoria registrada</option>
            {{/each}}
        </select>

        <button type="submit" class="btn btn-success mt-4">Criar postagem</button>
    </form>
</div>